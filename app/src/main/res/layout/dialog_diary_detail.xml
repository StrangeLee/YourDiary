<?xml version="1.0" encoding="utf-8"?>

<layout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="diary"
                type="com.strange.yourdiary.data.DiaryData" />
    </data>

    <LinearLayout
            android:layout_width="350dp"
            android:layout_height="650dp"
            android:orientation="vertical">

        <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorSkyBlue"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <TextView
                    android:id="@+id/tv_dialog_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X"
                    android:textColor="@color/colorWhite"
                    android:layout_gravity="right"
                    android:paddingRight="8dp"
                    android:layout_margin="3dp" />

            <TextView
                    android:id="@+id/tv_dialog_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:text="March"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp" />

            <TextView
                    android:id="@+id/tv_dialog_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:text="31"
                    android:textColor="@color/colorWhite"
                    android:textSize="40sp"
                    android:textStyle="bold" />

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/tv_dialog_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thursday, "
                        android:textColor="@color/colorWhite"
                        android:textSize="11sp" />

                <TextView
                        android:id="@+id/tv_dialog_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14:29"
                        android:textColor="@color/colorWhite"
                        android:textSize="11sp" />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                <TextView
                        android:id="@+id/tv_dialog_weather"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sunny, 36º "
                        android:textColor="@color/colorWhite"
                        android:textSize="11sp" />

                <TextView
                        android:id="@+id/tv_dialog_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="대구광역시"
                        android:textColor="@color/colorWhite"
                        android:textSize="11sp" />

            </LinearLayout>

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

            <TextView
                    android:id="@+id/tv_dialog_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:gravity="center"
                    android:text="title title"
                    android:textColor="@color/colorSkyBlue"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <TextView
                    android:id="@+id/tv_dialog_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:inputType="textMultiLine"
                    android:text="blablablabalb;ab;ab;ab;agsdfgsdgfgfgfsdfgsdfgsdfgrkasfasdfjasfsdl;fja;dlfjaskld;fjal;sdjfa;sldkjal;d"
                    android:layout_margin="10dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_dialog_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</layout>
